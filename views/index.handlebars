<h1>Burger!!</h1>

<h2>Make one and eat one</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="true">
          <button type="submit">EAT ME!</button>
        </form>

        
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>already eat</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="false">
          <button type="submit">try me again??</button>
        </form>

        
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee"></label><br>
    <input type="hidden" name="sleepy" value="0" checked>
  </div>

  <button type="submit">Add Burger</button>
</form>
